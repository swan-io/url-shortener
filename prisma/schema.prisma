generator client {
  provider        = "prisma-kysely"
  output          = "../src/database"
  fileName        = "types.ts"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgcrypto]
}

model Link {
  id         String   @id @default(dbgenerated("gen_random_uuid()"))
  address    String   @unique
  target     String
  created_at DateTime @default(now())
  expired_at DateTime

  @@map("links")
}
